@page "{id:int}"
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]
@model JobApplicationMvc.Pages.JobDetailsModel


@if (Model.Message != null)
{
    <div class="alert alert-info">
        <h4>@Model.Message</h4>
        <a class="btn btn-primary" asp-page="JobOpenings">Go Back and Find Another</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h3>We are glad you'd like to apply for @Model.Job?.Title</h3>
        </div>
        <div class="card-body">
            <p>This is in the @Model.Job?.Department department.</p>
            <p>It pays between @Model.Job?.SalaryBottomRange.ToString("c") and @Model.Job?.SalaryTopRange.ToString("c")</p>
            <p>Your Name <b>@Model.Applicant?.FirstName @Model.Applicant?.LastName</b></p>
            <p>Your Email Address <b>@Model.Applicant?.Email</b></p>
            <p>@Model.UserId</p>
        </div>
        <form method="post">
            <input type="hidden" asp-for="ApplicationModel.JobId" />
            <input type="hidden" asp-for="ApplicationModel.UserId" />
            <button type="submit" class="btn btn-success">Apply me for this job!</button>
        </form>
    </div>
}

